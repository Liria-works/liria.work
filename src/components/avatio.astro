---
import { Image } from 'astro:assets';
import LogoAvatio from '../assets/logo_avatio.svg';
---

<div class="w-full flex flex-col gap-6">
    <div class="w-fit flex flex-wrap items-center gap-x-8 gap-y-2">
        <a
            href="/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-fit flex mb-1 hover:opacity-60 transition ease-in-out duration-200"
        >
            <Image
                src={LogoAvatio}
                alt="Liria Graphics"
                loading="eager"
                class="w-44 sm:w-56 object-cover flex-shrink-0"
            />
        </a>

        <div class="w-fit flex items-center gap-8 pt-2">
            <div
                class="w-fit flex items-center gap-1.5 text-neutral-500 transition ease-in-out duration-200"
            >
                <p>now in private alpha</p>
            </div>
        </div>
    </div>

    <div class="flex items-center">
        <div
            class="w-full h-64 rounded-lg flex items-center justify-center bg-neutral-700"
        >
            <p class="text-neutral-500">preparing</p>
        </div>
    </div>
</div>
